{% extends "@Brd4Common/layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block body %}

    {{ render(controller('Brd4MessageBundle:Message:Add')) }}

    <ul class="media-list">
        {# @var message \Brd4\MessageBundle\Entity\Message #}
        {% for message in pagination %}
            <li class="media">
                <div class="media-left">
                    <a href="#">
                        <img class="media-object" src="data:image/svg+xml;base64," alt="...">
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">
                        <a href="{{ path('brd4_message_user_list', {'id': message.user.id}) }}"><small>{{ message.user.username }}</small></a>
                        - <small>{{ message.createdAt|date('H:i') }}</small>
                    </h4>
                    <p>{{ message.text }}<p>
                </div>
            </li>
        {% endfor %}
    </ul>

    {% if pagination is not null %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% endif %}

{% endblock %}
