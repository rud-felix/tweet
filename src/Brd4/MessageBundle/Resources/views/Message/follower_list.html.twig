{% extends "@Brd4Common/layout.html.twig" %}

{% block title %}followers message list{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>Followers message list <small>for 24 hours</small></h1>
    </div>

    <ul class="media-list">
        {# @var message \Brd4\MessageBundle\Entity\Message #}
        {% for message in pagination %}
            <li class="media">
                <div class="media-left">
                    <a href="#">
                        <img class="media-object" src="data:image/svg+xml;base64," alt="...">
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading"><a href="{{ path('brd4_message_user_list', {'id': message.user.id}) }}">{{ message.user.username }}</a></h4>
                    {{ message.createdAt|date('d-m-Y H:i') }}
                    {{ message.text }}
                </div>
            </li>
        {% endfor %}
    </ul>

    {% if pagination is not null %}
        <div class="navigation text-right">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% endif %}

{% endblock %}
