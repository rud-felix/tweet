<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="brd4.message.search.class">Brd4\MessageBundle\Search</parameter>
        <parameter key="brd4.message.message_controller.class">Brd4\MessageBundle\Controller\MessageController</parameter>
        <parameter key="brd4.message.api.v1.message_api_controller.class">Brd4\MessageBundle\Controller\Api\V1\MessageApiController</parameter>
    </parameters>

    <services>

        <service id="brd4.message.search" class="%brd4.message.search.class%">
            <argument type="service" id="fos_elastica.finder.search" />
            <argument type="service" id="knp_paginator" />
            <argument>%search.item.count%%</argument>
        </service>

        <service id="brd4.message.message_controller" class="%brd4.message.message_controller.class%" />

        <service id="brd4.message.api.v1.message_controller" class="%brd4.message.api.v1.message_api_controller.class%" />

    </services>

</container>