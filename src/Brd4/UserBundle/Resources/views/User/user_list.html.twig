{% extends "@Brd4Common/layout.html.twig" %}

{% block title %}User:list{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>All users <small>in system</small></h1>
    </div>

    {% if pagination is not null %}
        <h4 class="text-right">Count: {{ pagination.getTotalItemCount }}</h4
    {% endif %}

    <ul class="media-list">
        {# @var user \Brd4\UserBundle\Entity\User #}
        {% for user in pagination %}
            <li class="media">
                <div class="media-left">
                    <a href="#">
                        <img class="media-object" src="data:image/svg+xml;base64," alt="...">
                    </a>
                </div>
                <div class="media-body">
                    <h4><a href="{{ path('brd4_message_user_list', {'id': user.id}) }}">{{ user.username }}</a></h4>

                    {% if user.isFollow is defined and user.isFollow %}
                        <a href="{{ path('brd4_user_unfollow', {'id': user.id}) }}">unfollow</a>
                    {% else %}
                        <a href="{{ path('brd4_user_follow', {'id': user.id}) }}">follow</a>
                    {% endif %}
                </div>
            </li>
        {% endfor %}
    </ul>

    {% if pagination is not null %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% endif %}

{% endblock %}
