<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="brd4.user.user.class">Brd4\UserBundle\User</parameter>
        <parameter key="brd4.user.user_controller.class">Brd4\UserBundle\Controller\UserController</parameter>
        <parameter key="brd4.user.api.v1.user_api_controller.class">Brd4\UserBundle\Controller\Api\V1\UserApiController</parameter>
    </parameters>

    <services>

        <service id="brd4.user.user" class="%brd4.user.user.class%">
            <argument type="service" id="knp_paginator" />
            <argument type="service" id="brd4.user.repository.user" />
            <argument>%user_list.item.count%</argument>
        </service>

        <service id="brd4.user.user_controller" class="%brd4.user.user_controller.class%"/>

        <service id="brd4.user.api.v1.user_api_controller" class="%brd4.user.api.v1.user_api_controller.class%"/>

    </services>

</container>